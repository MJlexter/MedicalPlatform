<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>测试XML驱动模式</name>
  <tablename>tb_test</tablename>
  <fields>
    <field>
      <name>序号</name>
      <key>seq</key>
      <type>number</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
    </field>
    <field>
      <name>类别</name>
      <key>cate_id</key>
      <type>fkey</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <tablenme>tb_test_category</tablenme>
      <ntabname>r_cate</ntabname>
      <condition>r_cate.status='A'</condition>
    </field>
    <field>
      <name>名称</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>简介</name>
      <key>summary</key>
      <type>longtext</type>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>内容</name>
      <key>content</key>
      <type>html</type>
    </field>
    <field>
      <name>是否</name>
      <key>is_check</key>
      <type>check</type>
      <displayinlist>1</displayinlist>
      <yvalue>是</yvalue>
      <nvalue>否</nvalue>
    </field>
    <field>
      <name>图标</name>
      <key>logo</key>
      <type>upload</type>
      <uploadmodule>test</uploadmodule>
    </field>
    <field>
      <name>申请日期</name>
      <key>applied_date</key>
      <type>datetime</type>
      <displayinlist>1</displayinlist>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>不启用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>deleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>