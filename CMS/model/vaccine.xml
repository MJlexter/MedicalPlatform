<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>疫苗</name>
  <tablename>dr_tb_vaccine</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <ismutillang>1</ismutillang>
  <fields>
    <field>
      <name>疫苗编号</name>
      <key>code</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>疫苗名称</name>
      <key>name</key>
      <type>text</type>
      <ismutillang>1</ismutillang>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>疫苗简述</name>
      <key>summary</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>显示顺序</name>
      <key>seq</key>
      <type>number</type>
      <displayinlist>1</displayinlist>
      <notnull>1</notnull>
      <disableindetail>0</disableindetail>
    </field>
    <field>
      <name>显示图片</name>
      <key>image</key>
      <type>upload</type>
      <uploadmodule>vaccine</uploadmodule>
    </field>
    <field>
      <name>治疗效果</name>
      <key>effect_id</key>
      <type>fkey</type>
      <displayfield>name</displayfield>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
      <fmutillang>1</fmutillang>
      <tablename>dr_tb_effect</tablename>
      <ntbname>r_effect</ntbname>
      <condition>r_effect.status='A' and ( r_effect.type='A' or r_effect.type='Y' )</condition>
    </field>
    <field>
      <name>接种次数</name>
      <key>injection_count</key>
      <type>number</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>接种时间</name>
      <key>injection_time</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>接种季节</name>
      <key>injection_season</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>适用人群</name>
      <key>used_group_id</key>
      <type>flist</type>
      <displayfield>name</displayfield>
      <displayinlist>1</displayinlist>
      <fmutillang>1</fmutillang>
      <notnull>1</notnull>
      <tablename>dr_tb_used_group</tablename>
      <ntbname>r_used_group</ntbname>
      <condition>r_used_group.status='A' and ( r_used_group.type='A' or r_used_group.type='Y' )</condition>
    </field>
    <field>
      <name>香港计划内</name>
      <key>is_hk_project</key>
      <type>check</type>
      <displayinlist>1</displayinlist>
      <yvalue>是</yvalue>
      <nvalue>否</nvalue>
    </field>
    <field>
      <name>中国计划内</name>
      <key>is_china_project</key>
      <type>check</type>
      <displayinlist>1</displayinlist>
      <yvalue>是</yvalue>
      <nvalue>否</nvalue>
    </field>
    <field>
      <name>疫苗详细介绍</name>
      <key>description</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>接种注意事项</name>
      <key>caution</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>可能产生的不良反应</name>
      <key>bad_effect</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>产生不良反应的解决方法</name>
      <key>bad_effect_resolve</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>疫苗接种标准价格（HK$）</name>
      <key>standard_price</key>
      <type>number</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>折扣（%）</name>
      <key>discount</key>
      <type>number</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>详细信息</name>
      <key>content</key>
      <type>html</type>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>