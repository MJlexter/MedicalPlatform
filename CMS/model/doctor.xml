<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>医生</name>
  <tablename>dr_tb_doctor</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <ismutillang>1</ismutillang>
  <fields>
    <field>
      <name>执业许可证号</name>
      <key>licence_code</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>医生姓名</name>
      <key>name</key>
      <type>text</type>
      <ismutillang>1</ismutillang>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>头像</name>
      <key>photo</key>
      <type>upload</type>
      <uploadmodule>doctor_photo</uploadmodule>
    </field>
    <field>
      <name>性别</name>
      <key>sexual</key>
      <type>select</type>
      <options>
        <option>
          <name>男性</name>
          <value>M</value>
        </option>
        <option>
          <name>女性</name>
          <value>F</value>
        </option>
      </options>
      <notnull>1</notnull>
    </field>
    <field>
      <name>医生介绍</name>
      <key>summary</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>任职历程</name>
      <key>post_process</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>专业资格</name>
      <key>pro_title</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <displayinlist>1</displayinlist>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>可使用的医院</name>
      <key>hospital_list_id</key>
      <type>flist</type>
      <displayfield>name</displayfield>
      <fmutillang>1</fmutillang>
      <notnull>1</notnull>
      <tablename>dr_tb_hospital</tablename>
      <ntbname>r_hospital_list</ntbname>
      <condition>r_hospital_list.status='A'  </condition>
    </field>
    <field>
      <name>执业开始年份</name>
      <key>exec_year</key>
      <type>number</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>全科收费（HK$）</name>
      <key>general_price</key>
      <type>number</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>专科收费（HK$）</name>
      <key>specialist_price</key>
      <type>number</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>使用语言</name>
      <key>use_lang_id</key>
      <type>flist</type>
      <displayfield>name</displayfield>
      <notnull>1</notnull>
      <tablename>dr_tb_lang</tablename>
      <ntbname>r_lang_list</ntbname>
      <condition>1=1  </condition>
    </field>
    <field>
      <name>注册专科</name>
      <key>specialist_id</key>
      <type>fkey</type>
      <fmutillang>1</fmutillang>
      <displayfield>name</displayfield>
      <notnull>1</notnull>
      <tablename>dr_tb_specialist</tablename>
      <ntbname>r_specialist</ntbname>
      <condition>r_specialist.status='A' </condition>
      <search>1</search>
      <displayinlist>1</displayinlist>
    </field>
    <field>
      <name>是否全科</name>
      <key>is_general</key>
      <type>check</type>
      <displayinlist>1</displayinlist>
      <yvalue>是</yvalue>
      <nvalue>否</nvalue>
    </field>
    <field>
      <name>预约内容</name>
      <key>book_content</key>
      <type>longtext</type>
      <ismutillang>1</ismutillang>
      <notnull>1</notnull>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>可用疫苗</name>
      <key>doctorvaccinelist</key>
      <type>grid</type>
      <api>Doctor/doctorvaccine.php?action=getgrid&amp;doctor_id=</api>
      <newitemurl>Doctor/doctorvaccine.php?action=add&amp;key=doctor_id&amp;id=</newitemurl>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
  <javascripts>
    <javascript>
      <filename>doctor.js</filename>
      <detail>1</detail>
    </javascript>
    <javascript>
    </javascript>
  </javascripts>
</root>